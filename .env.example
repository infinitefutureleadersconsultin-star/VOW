# Firebase Configuration
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# JWT Secrets
# Generate using: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_min_32_chars

# Stripe Configuration
# Get from Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=sk_test_51...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51...

# Stripe Price IDs (update in pages/api/subscription.js too)
# Create products in Stripe Dashboard
STRIPE_PRICE_MONTHLY_4_99=price_...
STRIPE_PRICE_QUARTERLY_4_99=price_...
STRIPE_PRICE_MONTHLY_9_99=price_...
STRIPE_PRICE_QUARTERLY_9_99=price_...
STRIPE_PRICE_MONTHLY_14_99=price_...
STRIPE_PRICE_QUARTERLY_14_99=price_...

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_APP_NAME=VOW

# VAPID Keys for Push Notifications (Optional)
# Generate using: npx web-push generate-vapid-keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# Email Configuration (Optional - for future email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics (Optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Node Environment
NODE_ENV=development
